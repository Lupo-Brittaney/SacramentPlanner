@model IEnumerable<SacramentPlanner.Models.Meeting>

@{
    ViewData["Title"] = "Index";
}

<h2>Sacrament Meetings</h2>

<p>
    <a class="btn btn-primary pull-right" asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]"><h4>@Html.DisplayNameFor(model => model.Date)</h4></a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]"><h4>@Html.DisplayNameFor(model => model.Conduct)</h4></a>
                </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.ID">Program for @Html.DisplayFor(modelItem => item.Date)</a>
</td>
            <td>
                @Html.DisplayFor(modelItem => item.Conduct)
            </td>
                     
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.ID">Edit</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
