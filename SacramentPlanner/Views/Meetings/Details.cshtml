@model SacramentPlanner.Models.Meeting

@{
    ViewData["Title"] = "Details";
}

<h2>Sacrament Meeting - @Html.DisplayFor(model => model.Date)</h2>

<div>
    <hr />
    <h4>@Html.DisplayNameFor(model => model.Conduct): @Html.DisplayFor(model => model.Conduct)</h4>
    <hr />
    <dl class="dl-horizontal">
        <h4>Songs</h4>
        <dt>
            @Html.DisplayNameFor(model => model.OpenSong)
        </dt>
        <dd>
            #@Html.DisplayFor(model => model.OpenSongNum) -
            @Html.DisplayFor(model => model.OpenSong)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SacSong)
        </dt>
        <dd>
            #@Html.DisplayFor(model => model.SacSongNum) -
            @Html.DisplayFor(model => model.SacSong)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CloseSong)
        </dt>
        <dd>
            #@Html.DisplayFor(model => model.CloseSongNum) -
            @Html.DisplayFor(model => model.CloseSong)
        </dd>
        <hr />
        <h4>Prayers</h4>
        <dt>
            @Html.DisplayNameFor(model => model.OpenPrayer):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OpenPrayer)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ClosePrayer):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ClosePrayer)
        </dd>
        <hr />
        <h4>Speakers</h4>
        <dt>
            @Html.DisplayNameFor(model => model.YouthSpeaker)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.YouthSpeaker) -
            @Html.DisplayFor(model => model.YouthTopic)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SecondSpeaker)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SecondSpeaker) -
            @Html.DisplayFor(model => model.SecondTopic)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ThirdSpeaker)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ThirdSpeaker) - @Html.DisplayFor(model => model.ThirdTopic)
        </dd>
        <dt>
    </dl>
</div>
<hr/>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ID">Edit</a> <a class="btn btn-default" asp-action="Index">Cancel</a>
</div>
